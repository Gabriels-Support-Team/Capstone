generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id String @id
  email String
  age   Int
  occupation Int
  gender String
  movies UserMovies[]
  bookmarks BookmarkedMovie[]
}
model Movie {
  movieId  Int  @id
  title    String
  genres   String
  users    UserMovies[]
  tmdbId     Int?   // Optional field for TMDb ID
  bookmarks   BookmarkedMovie[]

}
model UserMovies {
  user   User   @relation(fields: [userId], references: [id])
  userId String
  movie  Movie  @relation(fields: [movieId], references: [movieId])
  movieId Int
  rating Float
  comparisons Int    @default(0)
  @@id([userId, movieId])
}

model BookmarkedMovie {
  user     User   @relation(fields: [userId], references: [id])
  userId   String
  movie    Movie  @relation(fields: [movieId], references: [movieId])
  movieId  Int
  predictedRating Float?
  @@id([userId, movieId])
}